generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int @default(autoincrement()) @id
  name      String
  email     String
  password String
  lastName String ?
  age      DateTime ?
  about     String ?

}
model Comment {
  id          Int @default(autoincrement()) @id
  text        String
  musicId     Int
  userId      Int
  rating      Int ?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

